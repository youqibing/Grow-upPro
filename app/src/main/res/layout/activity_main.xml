<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.growup.main.main.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/animator">

        <android.opengl.GLSurfaceView
            android:id="@+id/gameSurfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="351dp"
        android:id="@+id/function"
        android:orientation="vertical"
        android:layout_marginBottom="-370dp"
        android:gravity="center"
        android:layout_below="@+id/animator"
        android:layout_alignParentLeft="true">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:background="#362e2b"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tab"
            android:background="#97836c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabBackground="@drawable/selector_bg"
            style="@style/MyTabLayout"/>
        <!--app:tabBackground="@mipmap/ic_launcher"-->

    </LinearLayout >


</RelativeLayout>
